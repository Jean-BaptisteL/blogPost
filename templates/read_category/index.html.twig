{% extends 'base.html.twig' %}

{% block title %}Hello ReadCategoryController!{% endblock %}

{% block body %}
    
    <div class="col-6 d-flex justify-content-center">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                {{ user is defined ? "<th>Update</th>" : "" }}
            </tr>
        </thead>
        <tbody>
        {% for category in listCategory %}
            <tr>
                <td>{{category.id}}</td>
                <td><a href="{{ path('app_read_post_category', {'category':category.slug}) }}">{{category.name}}</a></td>
                <td>
                    {% if category is defined %}
                        <a href="{{ path('app_update_category' , {'id': category.id}) }}" class="btn btn-warning">Update</a>
                    {% endif %}
                </td>
            </tr>             
        {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}
